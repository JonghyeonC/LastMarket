<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical"
    tools:context=".fragment.MypageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/sellerProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/search" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sellerNicname"
                style="@style/detail_price2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gmarket_sans_ttf_medium"
                android:text="TextView" />

            <TextView
                android:id="@+id/sellerLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="진평동" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/like_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="나의 찜 목록 보기"
            android:lineSpacingExtra="4sp"
            android:fontFamily="@font/gmarket_sans_ttf_medium"
            style="@style/chat"
            android:textSize="28sp"
            android:gravity="center_vertical"
            />

    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerThickness="2dp"/>

    <LinearLayout
        android:id="@+id/review_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_alignParentTop="true"
            android:text="나의 리뷰 목록 보기"
            android:fontFamily="@font/gmarket_sans_ttf_medium"
            style="@style/chat"
            android:lineSpacingExtra="4sp"
            android:textSize="28sp"
            android:gravity="center_vertical"
            />

    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerThickness="2dp"/>

    <LinearLayout
        android:id="@+id/sell_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/some_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_alignParentTop="true"
            android:text="판매중인 상품 목록 보기"
            android:fontFamily="@font/gmarket_sans_ttf_medium"
            style="@style/chat"
            android:lineSpacingExtra="4sp"
            android:textSize="28sp"
            android:gravity="center_vertical"
            />
    </LinearLayout>
</LinearLayout>