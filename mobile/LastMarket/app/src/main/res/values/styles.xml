<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom font 적용 -->
    <style name="text" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_light</item>
    </style>

    <style name="button_borderless" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_medium</item>
    </style>

    <style name="edittext" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_light</item>
    </style>

    <style name="radiobutton" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_light</item>
    </style>

    <style name="checkbox" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_light</item>
    </style>
    <style name="Theme.TestPlace" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialogTheme</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomRoundedBackgroundBottomSheet</item>
    </style>

    <style name="CustomRoundedBackgroundBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/radius</item>
    </style>
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="last_market">
        <item name="android:fontFamily">
            @font/gmarket_sans_ttf_bold
        </item>
        <item name="android:textSize">
            48sp
        </item>
        <item name="android:textColor">
            @color/blue1
        </item>
    </style>

    <style name="subtitle">
        <item name="android:fontFamily">
            @font/gmarket_sans_ttf_light
        </item>
        <item name="android:textSize">
            24sp
        </item>
        <item name="android:textColor">
            #2FA599
        </item>
    </style>

    <style name="color_mid">
        <item name="android:fontFamily">
