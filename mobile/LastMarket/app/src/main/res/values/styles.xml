<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom font 적용 -->
    <style name="text" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_light</item>
    </style>

    <style name="button_borderless" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_medium</item>
    </style>

    <style name="edittext" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_light</item>
    </style>

    <style name="radiobutton" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_light</item>
    </style>

    <style name="checkbox" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_light</item>
    </style>

    <style name="last_market">
        <item name="android:fontFamily">
            @font/gmarket_sans_ttf_bold
        </item>
        <item name="android:textSize">
            48sp
        </item>
        <item name="android:textColor">
            @color/blue1
        </item>
    </style>

    <style name="subtitle">
        <item name="android:fontFamily">
            @font/gmarket_sans_ttf_light
        </item>
        <item name="android:textSize">
            24sp
        </item>
        <item name="android:textColor">
            #2FA599
        </item>
    </style>

    <style name="color_mid">
        <item name="android:fontFamily">
            @font/gmarket_sans_ttf_medium
        </item>
        <item name="android:textSize">
            20sp
        </item>
        <item name="android:textColor">
            #818DCC
        </item>
    </style>

    <style name="info">
        <item name="android:textSize">
            12sp
        </item>
        <item name="android:letterSpacing">
            0.03
        </item>
        <item name="android:textColor">
            #C8C7CB
        </item>
    </style>

    <style name="content">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">
            #111111
        </item>

    </style>

    <style name="price">
        <item name="android:fontFamily">@font/esamanru_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/blue1</item>
    </style>

    <style name="live">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/esamanru_bold</item>
    </style>
</resources>